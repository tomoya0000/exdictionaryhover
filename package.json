{
  "name": "exdictionaryhover",
  "displayName": "ExDictionaryHover",
  "description": "外部ファイルで定義した辞書を参照し、説明をホバーします。",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "test"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ExDictionaryHover Configuration",
      "properties": {
        "exDictionaryHover.csvFiles": {
          "type": "array",
          "description": "CSVファイルの設定リスト。各要素はfilePath, idCol, sqlCol, descColを含みます。",
          "items": {
            "type": "object",
            "properties": {
              "filePath": {
                "type": "string",
                "description": "CSVファイルのパス"
              },
              "idCol": {
                "type": "number",
                "description": "ID列のインデックス"
              },
              "sqlCol": {
                "type": "number",
                "description": "SQL列のインデックス"
              },
              "descCol": {
                "type": "number",
                "description": "説明列のインデックス（省略可能）"
              },
              "encode": {
                "type": "string",
                "description": "ファイルのエンコード（省略可能、デフォルトutf-8）"
              }
            },
            "required": [
              "filePath",
              "idCol",
              "sqlCol"
            ]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.2.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "csv-parse": "^5.6.0"
  }
}
